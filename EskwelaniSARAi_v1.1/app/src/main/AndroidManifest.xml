<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myka.eskwelanisarai" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sarai_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myka.eskwelanisarai.MainActivity" />
        </activity>
        <activity
            android:name=".GuestHomeActivity"
            android:label="@string/title_activity_guest_home"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myka.eskwelanisarai.MainActivity" />
        </activity>
        <activity
            android:name=".TraineeHomeActivity"
            android:label="@string/title_activity_trainee_home"
            android:parentActivityName=".LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myka.eskwelanisarai.LoginActivity" />
        </activity>
        <activity
            android:name=".GuestTrendingActivity"
            android:label="@string/title_activity_guest_trending"
            android:parentActivityName=".GuestHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myka.eskwelanisarai.GuestHomeActivity" />
        </activity>
        <activity
            android:name=".TraineeTrendingActivity"
            android:label="@string/title_activity_trainee_trending"
            android:parentActivityName=".TraineeHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myka.eskwelanisarai.TraineeHomeActivity" />
        </activity>
        <activity
            android:name=".TraineeCourseTraceActivity"
            android:label="@string/title_activity_trainee_course_trace"
            android:parentActivityName=".TraineeHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myka.eskwelanisarai.TraineeHomeActivity" />
        </activity>
        <activity
            android:name=".TraineeCourseTrackActivity"
            android:label="@string/title_activity_trainee_course_track"
            android:parentActivityName=".TraineeHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myka.eskwelanisarai.TraineeHomeActivity" />
        </activity>
    </application>

</manifest> <!-- Slidenerd's videos from youtube was the reference for most of Material Designs Theme used in this application. -->
