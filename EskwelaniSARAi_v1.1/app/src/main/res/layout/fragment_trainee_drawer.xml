<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myka.eskwelanisarai.TraineeDrawerFragment"
    android:background="@color/lightColor">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/trainee_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor">

        <ImageView
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/smallfarm" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/trainee_container"
        android:id="@+id/trainee_drawer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
