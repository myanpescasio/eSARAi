<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trainee_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightColor"
        tools:context="com.example.myka.eskwelanisarai.Sample1Activity">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/course_video"
            android:layout_below="@+id/app_bar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/corn_parts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/course_video"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:text="Corn Parts"/>

        <TextView
            android:id="@+id/corn_parts_discuss"
            android:layout_below="@id/corn_parts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="12sp"
            android:text="1. Endosperm - source of energy and protein for germination. \n2. Embryo/Germ - living part of the corn kernel. \n3. Pericarp/Haul - outer covering of the kernel.\n4. Tip Cap - attachment point of the kernel."/>

        <TextView
            android:id="@+id/corn_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/corn_parts_discuss"
            android:layout_marginLeft="16dp"
            android:textSize="16dp"
            android:text="Corn Types"/>

        <TextView
            android:id="@+id/corn_types_discuss"
            android:layout_below="@id/corn_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="12sp"
            android:text="1. Dent Corn - contains hard and starchy endosperm. \n2. Flint Corn - contains hard, round, and flat kernels. \n3. Waxy Corn - conatains glossy and waxy kernels when cut.\n4. Sweet Corn - contains high quantity of sugar in the milk stage of the kernel. \n5. Popcorn - conatains small ears and small rounded, pointed kernels."/>

        <Button
            android:layout_below="@id/corn_types_discuss"
            android:id="@+id/continue_to_quiz"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="Continue to Quiz"
            android:textSize="8sp"
            android:textColor="@color/lightColor"
            android:background="@color/primaryColor"
            android:layout_margin="16dp"
            android:onClick="redirectQuiz"/>

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>






