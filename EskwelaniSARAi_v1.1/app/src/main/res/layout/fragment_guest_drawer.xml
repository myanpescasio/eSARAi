<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightColor"
    tools:context="com.example.myka.eskwelanisarai.GuestDrawerFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/guest_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="32dp"
            android:text="Guest"
            android:textAllCaps="true"
            android:textColor="@color/lightColor"
            android:textSize="24sp" />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/guest_drawer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/guest_container"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
