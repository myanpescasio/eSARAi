<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/guest_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightColor"
        tools:context="com.example.myka.eskwelanisarai.GuestTrendingActivity">

        <include
            android:id="@+id/trending_template"
            layout="@layout/trending_template" />

    </RelativeLayout>

    <fragment
        android:id="@+id/fragment_guest_drawer"
        android:name="com.example.myka.eskwelanisarai.GuestDrawerFragment"
        android:layout_width="@dimen/nav_drawer"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_guest_drawer"
        tools:layout="@layout/fragment_guest_drawer" />
</android.support.v4.widget.DrawerLayout>






