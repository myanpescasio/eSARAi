<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <!--This is the theme for the Pre-Lollipop devices-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="background">@color/lightColor</item>
    </style>

    <style name="CustomToolbarTheme" parent="Platform.ThemeOverlay.AppCompat.Dark">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/lightColor</item>
        <item name="android:textColorSecondary">@color/lightColor</item>

    </style>

</resources>
